		<div class="hubWrap">
			<strong class="name">$i18n.getText("hub.integration.jira.issue.custom.project.label"):</strong>
			<div id="hubProjectName" class="value">$bdsHubProject</div>
		</div>
	</li>
#end
#if ($bdsHubProjectVersion)
